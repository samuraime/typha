/**app.wxss**/

@font-face {
  font-family: 'FontAwesome';
  src: url('http://typha.samuraime.com:3000/static/fonts/fontawesome-webfont.eot');
  src: url('http://typha.samuraime.com:3000/static/fonts/fontawesome-webfont.woff2') format('woff2'),
    url('http://typha.samuraime.com:3000/static/fonts/fontawesome-webfont.woff0') format('woff'),
    url('http://typha.samuraime.com:3000/static/fonts/fontawesome-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

.fa {
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  /*-webkit-font-smoothing: antialiased;*/
  /*-moz-osx-font-smoothing: grayscale;*/
}
.fa-fw {
  width: 1.28571429em;
  text-align: center;
}
.fa-star::before {
  content: "\f005";
}
.fa-star-o::before {
  content: "\f006";
}
.fa-heart:before {
  content: "\f004";
}
.fa-heart-o:before {
  content: "\f08a";
}
.fa-comment:before {
  content: "\f075";
}
.fa-comment-o:before {
  content: "\f0e5";
}
.fa-spinner:before {
  content: "\f110";
}
.fa-spin {
  animation: fa-spin 2s infinite linear;
}
@keyframes fa-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(359deg);
  }
}

page {
  width: 100%;
  height: 100%;
  background: #f3f5f6;
  color: #3c3c3c;
}
.ta-container {
  box-sizing: border-box;
}
.ta-image {
  position: relative;
}
.ta-image image {
  width: 100%;
  height: 100%;
}
.ta-image::after {
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #eee;
  opacity: 1;
  transition: opacity 1s;
}
.ta-image.ta-loaded::after {
  opacity: 0;
}
.fa-heart {
  color: #e5767b;
}