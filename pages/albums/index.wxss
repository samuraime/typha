.photo-container {
  width: 100%;
  position: relative;
}
.photo {
  display: block;
  width: 100%;
  height: 200rpx;
  margin: 10rpx 0;
}
.actions {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 0 10rpx;
  color: #b3b3b3;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #fff;
}
.star {
  padding: 10rpx;
  font-size: 36rpx;
}