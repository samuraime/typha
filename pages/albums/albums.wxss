.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.card {
  width: 710rpx;
  margin: 20rpx;
  font-size: 32rpx;
  line-height: 1.2;
  color: #3c3c3c;
  background: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 10rpx 0 rgba(0, 0, 0, 0.2),
    0 0 10rpx 0 rgba(0, 0, 0, 0.1);
}
.card .title {
  display: block;
  padding: 20rpx 20rpx 0;
  margin-bottom: 20rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}
.card image {
  display: block;
  width: 100%;
}
.card .action {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  color: #b3b3b3;
  font-size: 28rpx;
}
.card .action .texts text {
  margin-right: 25rpx;
}
.card .action .icons text {
  font-size: 1.5em;
}

.loading-container {
  display: block;
  text-align: center;
  width: 100%;
  height: 50rpx;
  padding-bottom: 20rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.loading {
  color: #3c3c3c;
}
.loading.hidden {
  display: none;
}